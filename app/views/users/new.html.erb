<%= render 'shared/header', title: 'Register' %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username, placeholder: "Choose a username" %>
  <br/>
  <%= f.label :email %>
  <%= f.email_field :email, placeholder: "email@example.com" %>
  <br/>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br/>
  <%= f.submit 'Register' %>
<% end %>