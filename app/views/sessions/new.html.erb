<%= render 'shared/header', title: 'Log in' %>

<%= form_tag '/login' do %>
  <%= label_tag :username %>
  <%= text_field_tag :username, params[:username] || '' %>
  <br/>
  <%= label_tag :password %>
  <%= password_field_tag :password, params[:password] || '' %>
  <%= submit_tag 'Log in' %>
<% end %>